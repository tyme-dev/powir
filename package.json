{
  "name": "powir",
  "version": "2.0.0",
  "description": "Windows 10 based tool to monitor and analyze your system's power and battery usage",
  "main": "dist-electron/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tyme-dev/powir.git"
  },
  "author": {
    "name": "Timothy Pace",
    "email": "powir@timothy.dev"
  },
  "keywords": [
    "electron",
    "battery",
    "windows-battery",
    "react",
    "battery-monitoring",
    "battery-analyzer"
  ],
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@tailwindcss/vite": "^4.1.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^4.3.4",
    "axios": "^1.8.4",
    "chart.js": "^4.4.8",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.3.3",
    "jssoup": "0.0.15",
    "lodash": "^4.17.21",
    "react": "^18.3.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "tailwindcss": "^4.1.3",
    "vite": "^6.3.4"
  },
  "scripts": {
    "browser-start": "node public/browser.js&&set VITE_REACT_APP_LITE_MODE=1&&vite",
    "start": "set BROWSER=none&&set VITE_REACT_APP_LITE_MODE=0&&vite",
    "electron-start": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "build": "vite build",
    "dev": "set VITE_REACT_APP_LITE_MODE=0&&vite"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
