{
  "name": "powir",
  "version": "2.3.0",
  "description": "Windows 10 based tool to monitor and analyze your system's power and battery usage",
  "main": "dist-electron/main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tyme-dev/powir.git"
  },
  "type": "module",
  "author": {
    "name": "Timothy Pace",
    "email": "powir@timothy.dev"
  },
  "keywords": [
    "electron",
    "battery",
    "windows-battery",
    "react",
    "battery-monitoring",
    "battery-analyzer"
  ],
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@tailwindcss/vite": "^4.1.8",
    "@theme-toggles/react": "^4.1.0",
    "@vitejs/plugin-react": "^4.5.1",
    "axios": "^1.9.0",
    "chart.js": "^4.4.9",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.4.0",
    "node-html-parser": "^7.0.1",
    "react": "^19.1.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.0",
    "tailwindcss": "^4.1.8",
    "vite": "^6.3.5"
  },
  "scripts": {
    "browser-start": "node public/browser.js&&set VITE_REACT_APP_LITE_MODE=1&&vite",
    "start": "set BROWSER=none&&set VITE_REACT_APP_LITE_MODE=0&&vite",
    "electron-start": "set ELECTRON_START_URL=http://localhost:3000 && electron .",
    "build": "vite build",
    "build-local": "vite build && electron-builder",
    "dev": "set VITE_REACT_APP_LITE_MODE=0&&vite"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^37.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.28.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  }
}
